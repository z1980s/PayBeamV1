<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data>
    <variable
        name="homePresenter"
        type="info.paybeam.www.paybeamv1.PayBeam.HomeActivity.HomePresenter"/>
</data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue_splat"
        app:layout_constraintEnd_toStartOf="@+id/button_transaction"
        app:layout_constraintStart_toStartOf="@+id/button_transaction"
        tools:context="info.paybeam.www.paybeamv1.PayBeam.HomeActivity.HomeActivity">


        <Button
            android:id="@+id/button_p2r"
            android:layout_width="140dp"
            android:layout_height="0dp"
            android:background="@color/transparent"
            android:drawableTop="@drawable/ic_local_atm_black_48dp_2x"
            android:fontFamily="sans-serif-smallcaps"
            android:text="pay merchant"
            android:textAllCaps="false"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="206dp" />

        <Button
            android:id="@+id/button_p2p"
            android:layout_width="140dp"
            android:layout_height="0dp"

            android:background="@color/transparent"
            android:drawableTop="@drawable/ic_speaker_phone_black_48dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Phone to Phone"
            android:textAllCaps="false"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="206dp" />


        <Button
            android:id="@+id/button_cards"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:drawableTop="@drawable/ic_credit_card_black_48dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Cards"
            android:textAllCaps="false"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="25dp" />

        <Button
            android:id="@+id/button_transaction"
            android:layout_width="140dp"
            android:layout_height="0dp"
            android:background="@color/transparent"
            android:drawableTop="@drawable/ic_receipt_black_48dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="transactions"
            android:textAllCaps="false"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="25dp" />


        <Button
            android:id="@+id/button_profile"
            android:layout_width="140dp"
            android:layout_height="0dp"
            android:background="@color/transparent"
            android:drawableTop="@drawable/ic_account_box_black_48dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="profile"
            android:textAllCaps="false"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="386dp" />

        <Button
            android:id="@+id/button_settings"
            android:layout_width="140dp"
            android:layout_height="0dp"
            android:background="@color/transparent"
            android:drawableTop="@drawable/ic_settings_applications_black_48dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Settings"
            android:textAllCaps="false"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="386dp" />


    </android.support.constraint.ConstraintLayout>
</layout>